<Page x:Class="NorModifierCod3rWPF.Pages.PageHost"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NorModifierCod3rWPF.Pages"
      mc:Ignorable="d" 
      MinHeight="558" MinWidth="847"
      Title="PageHost">

    <Grid>
        <Grid Name="NavBar">
            <Canvas HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="100">
                <Path Fill="Black">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="0,0">
                                <LineSegment Point="310,0" />
                                <LineSegment Point="275,50" />
                                <LineSegment Point="0,50" />
                                <LineSegment Point="0,0" />
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>
            </Canvas>
            <Grid Height="50" VerticalAlignment="Top">
                <Button Width="95" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="11,0,0,0" Content="NOR Modifier" Click="NavigateNOR"/>
                <Button Width="60" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="120,0,0,0" Content="UART" Click="NavigateUART"/>
                <Button Width="60" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="195,0,0,0" Content="About" Click="NavigateAbout"/>
            </Grid>
        </Grid>

        <Frame Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
