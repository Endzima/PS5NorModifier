<Page x:Class="NorModifierCod3rWPF.Pages.SubPages.NORModifier"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NorModifierCod3rWPF.Pages.SubPages"
      mc:Ignorable="d" 
      MinHeight="558" MinWidth="847"
      Title="NORModifier">

    <Page.Resources>
        <Style x:Key="Donation" TargetType="Button">
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="Transparent" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3a3a3a"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3e3e3e"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="Gray"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="DarkGray"/>
                                <Setter Property="Foreground" Value="DarkGray"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TextBox" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="BorderBrush" Value="#cccccc" />
            <Setter Property="FontSize" Value="7"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#Poppins"/>
            <Setter Property="Foreground" Value="#cccccc"/>
            <Setter Property="Background" Value="#303338" />
            <Setter Property="Padding" Value="2,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border x:Name="Border" CornerRadius="4" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                                <Border.Background>
                                    <SolidColorBrush Color="Black" Opacity="0.7"/>
                                </Border.Background>
                            </Border>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}" VerticalAlignment="Center" Background="Transparent" Foreground="{TemplateBinding Foreground}" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#808080" />
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#76777a" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#E0E0E0" />
                                <Setter TargetName="Border" Property="BorderBrush" Value="DarkGray" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    
    <Grid>
        <Image Source="pack://application:,,,/Assets/TCT.png" Width="50" Height="50" RenderOptions.BitmapScalingMode="HighQuality" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15"/>
        <TextBlock Width="400" Text="Rewrite your NOR flash rom files quickly and easily! Get started by selecting a NOR dump on your local machine." FontSize="13" Margin="20,70,0,0" HorizontalAlignment="Left" TextWrapping="Wrap"/>
        <Border Background="#282828" Margin="20,130,20,100" CornerRadius="5">
            <Grid>
                <Grid Name="ImportNOR">
                    <TextBlock Text="Select NOR Dump below." Margin="10,10,0,0" FontWeight="Medium"/>
                    <TextBox Name="Path" Margin="10,30,0,0" Width="397" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" IsHitTestVisible="False"/>
                    <Button Width="30" Height="35" Style="{StaticResource Transparent}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="415,30,0,0" Click="browseFileButton_Click">
                        <Image Source="pack://application:,,,/Assets/ImportDump.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Button>

                    <TextBlock Width="520" Text="A dump of the PS5's NOR is required to view the information. If you don't have a dump from your console, there will be plenty of tutorials on YouTube that will help you." Margin="10,70,0,0" FontWeight="Regular" TextWrapping="Wrap" HorizontalAlignment="Left"/>
                </Grid>

                <Grid Name="DeviceInfo">
                    <TextBlock Text="Dumped Device Info" FontWeight="SemiBold" Margin="10,120,0,0"/>
                    <TextBlock Text="Results" FontWeight="SemiBold" Margin="200,120,0,0"/>
                    <TextBlock Text="Modify Values" FontWeight="SemiBold" Margin="490,120,0,0"/>

                    <StackPanel Name="FieldLabels" Margin="10,150,0,0">
                        <DockPanel Margin="0,0,10,10" Height="1" Background="#c3c3c3" UseLayoutRounding="True"/>
                        <TextBlock Text="Serial Number: " FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Text="Motherboard Serial: " FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Text="Board Variant: " FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Text="PS5 Model: " FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Text="File Size:" FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Text="WiFi Mac Address:" FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Text="LAN Mac Address: " FontSize="12" Margin="0,0,0,5"/>
                    </StackPanel>

                    <StackPanel Name="InfoLabels" Margin="200,150,0,0">
                        <DockPanel Margin="0,0,10,10" Height="1" Background="#c3c3c3" UseLayoutRounding="True"/>
                        <TextBlock Name="serialNumber" Text="NOR Dump not selected." FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Name="moboSerialInfo" Text="NOR Dump not selected." FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Name="boardVariant" Text="NOR Dump not selected." FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Name="modelInfo" Text="NOR Dump not selected." FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Name="fileSizeText" Text="NOR Dump not selected." FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Name="macAddressInfo" Text="NOR Dump not selected." FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Name="LANMacAddressInfo" Text="NOR Dump not selected." FontSize="12" Margin="0,0,0,5"/>
                    </StackPanel>

                    <StackPanel Name="ValueLabels" Margin="490,150,0,0">
                        <TextBlock Text="Serial Number:" Margin="0,10,0,0"/>
                        <TextBlock Text="Board Variant:" Margin="0,9,0,0"/>
                        <TextBlock Text="PS5 Model:" Margin="0,7,0,0"/>
                    </StackPanel>

                    <StackPanel Name="ModifyValues" Margin="490,150,0,0">
                        <DockPanel Margin="0,0,10,10" Height="1" Background="#c3c3c3" UseLayoutRounding="True"/>
                        <TextBox Name="serialNumberTextbox" Text="NOR Dump not selected." FontSize="12" Margin="120,0,10,5" Height="20" Style="{StaticResource TextBox}"/>
                        <ComboBox Name="boardVariantComboBox" Text="NOR Dump not selected." FontSize="12" Margin="120,0,10,5" Height="20">
                            <ComboBoxItem Content="CFI-1000A" />
                            <ComboBoxItem Name="jgh" Content="CFI-1000A01" />
                            <ComboBoxItem Content="CFI-1000B" />
                            <ComboBoxItem Content="CFI-1002A" />
                            <ComboBoxItem Content="CFI-1008A" />
                            <ComboBoxItem Content="CFI-1014A" />
                            <ComboBoxItem Content="CFI-1015A" />
                            <ComboBoxItem Content="CFI-1015B" />
                            <ComboBoxItem Content="CFI-1016A" />
                            <ComboBoxItem Content="CFI-1018A" />
                            <ComboBoxItem Content="CFI-1100A01" />
                            <ComboBoxItem Content="CFI-1102A" />
                            <ComboBoxItem Content="CFI-1108A" />
                            <ComboBoxItem Content="CFI-1109A" />
                            <ComboBoxItem Content="CFI-1114A" />
                            <ComboBoxItem Content="CFI-1115A" />
                            <ComboBoxItem Content="CFI-1116A" />
                            <ComboBoxItem Content="CFI-1118A" />
                            <ComboBoxItem Content="CFI-1208A" />
                            <ComboBoxItem Content="CFI-1215A" />
                            <ComboBoxItem Content="CFI-1216A" />
                            <ComboBoxItem Content="DFI-T1000AA" />
                            <ComboBoxItem Content="DFI-D1000AA" />
                        </ComboBox>
                        <ComboBox Name="boardModelComboBox" Text="NOR Dump not selected." FontSize="12" Margin="120,0,10,5" Height="20">
                            <ComboBoxItem Name="DiscSelection" Content="Disc Edition"/>
                            <ComboBoxItem Name="DigitalSelection" Content="Digital Edition"/>
                        </ComboBox>
                        <Button Content="Save New BIOS Information" Height="30" Margin="120,0,10,0" Click="SaveBios"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <Button Margin="20,0,0,10" Width="807" Height="80" HorizontalAlignment="Left" VerticalAlignment="Bottom" Style="{StaticResource Donation}" Click="DonateToCod3r">
            <Grid Name="Donation">
                <Image Source="pack://application:,,,/Assets/PP.png" Width="150" Height="45" RenderOptions.BitmapScalingMode="HighQuality" HorizontalAlignment="Left"/>
                <TextBlock Text="Please consider supporting TheCod3r for his original source code and time with a small donation. Your contribution will make HIS wallet happy, not mine unfortunately. Click here to donate!  Don't forget to subscribe to TheCod3r on YouTube too!" TextWrapping="Wrap" Margin="50,0,0,0" VerticalAlignment="Center"/>
            </Grid>
        </Button>
    </Grid>
</Page>
